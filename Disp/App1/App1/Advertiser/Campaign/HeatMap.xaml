<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Advertiser.Campaign.HeatMap"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:templates="clr-namespace:App1.Templates">
    <ContentPage.Content>
        <Grid Padding="0" Margin="0" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.RowSpan="8" Grid.Row="0" VerticalOptions="FillAndExpand" Padding="0" Margin="0">
                <maps:Map x:Name="map" IsShowingUser = "True" Margin="0" HasScrollEnabled="False" VerticalOptions="FillAndExpand" HasZoomEnabled="False"/>
            </StackLayout>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>