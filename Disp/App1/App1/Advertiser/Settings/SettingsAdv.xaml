<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="App1.Advertiser.Settings.SettingsAdv">
    <ContentPage.Content>
        <Grid Padding="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Margin="10, 0, 10, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame BackgroundColor="#FFFFFF"  Grid.ColumnSpan="7" Margin="10,0,10,5" HasShadow="True" CornerRadius="5">
                    <Label Text="ООО Название компании" Grid.ColumnSpan="6"
                       TextColor="Black" FontSize="Subtitle" VerticalTextAlignment="Center" 
                        Margin="10,0,10,0"/>
                </Frame>

                <Image Source="shape.png"
                       Grid.Column="6"
                       Aspect="AspectFill"
                       WidthRequest="9"
                       HeightRequest="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,0,15,0"
                       />

                <Button Margin="10,0,10,0"
                        BackgroundColor="#00000000"
                        CornerRadius="5" Grid.ColumnSpan="7"
                        Clicked="CompanyDataUpdate"/>
            </Grid>

            <Grid Grid.Row="2" Margin="10, 0, 10, 0" IsVisible="false">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame BackgroundColor="#FFFFFF"  Grid.ColumnSpan="7" Margin="10,0,10,5" HasShadow="True" CornerRadius="5">
                    <Label Text="mail@email.com" Grid.ColumnSpan="6"
                       TextColor="Black" FontSize="Subtitle" VerticalTextAlignment="Center" 
                        Margin="10,0,10,0" />
                </Frame>
                <Image Source="shape.png"
                       Grid.Column="6"
                       Aspect="AspectFill"
                       WidthRequest="9"
                       HeightRequest="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,0,15,0"
                       />
                <Button Margin="10,0,10,0" 
                        BackgroundColor="#00000000"
                        CornerRadius="5" Grid.ColumnSpan="7"
                        Clicked="ChangeEmailAdv"/>
            </Grid>

            <Grid Grid.Row="2" Margin="10, 0, 10, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame BackgroundColor="#FFFFFF"  Grid.ColumnSpan="7" Margin="10,0,10,5" HasShadow="True" CornerRadius="5">
                    <Label Text="+7 (999) 999-99-99" 
                           Grid.ColumnSpan="6"
                       TextColor="Black" FontSize="Subtitle" VerticalTextAlignment="Center" 
                        Margin="10,0,10,0" />
                    <!-- Номер телефона нужно привязать {Binding} к номеру nowUser -->
                </Frame>

                <Image Source="shape.png"
                       Grid.Column="6"
                       Aspect="AspectFill"
                       WidthRequest="9"
                       HeightRequest="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,0,15,0"
                       />
                <Button Margin="10,0,10,0" 
                        BackgroundColor="#00000000"
                        CornerRadius="5" Grid.ColumnSpan="7"
                        Clicked="ChangeTelAdv"
                        />
            </Grid>

            <Grid Grid.Row="4" Margin="10, 0, 10, 0" IsVisible="false">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame BackgroundColor="#FFFFFF"  Grid.ColumnSpan="7" Margin="10,0,10,5" HasShadow="True" CornerRadius="5">
                    <Label Text="Сменить пароль" Grid.ColumnSpan="6"
                       TextColor="Black" FontSize="Subtitle" VerticalTextAlignment="Center" 
                        Margin="10,0,10,0" />
                </Frame>
                <Image Source="shape.png"
                       Grid.Column="6"
                       Aspect="AspectFill"
                       WidthRequest="9"
                       HeightRequest="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,0,15,0"
                       />
                <Button Margin="10,0,10,0" 
                        BackgroundColor="#00000000"
                        CornerRadius="5" Grid.ColumnSpan="7"
                        Clicked="PasswordChangeAdv"/>
            </Grid>

            <Grid Grid.Row="3" Margin="10, 0, 10, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame BackgroundColor="#FFFFFF"  Grid.ColumnSpan="7" Margin="10,0,10,5" HasShadow="True" CornerRadius="5">
                    <Label Text="Договор на оказание рекламных услуг" Grid.ColumnSpan="6"
                       TextColor="Black" FontSize="Subtitle" VerticalTextAlignment="Center" 
                        Margin="10,0,10,0" />
                </Frame>
                <Image Source="shape.png"
                       Grid.Column="6"
                       Aspect="AspectFill"
                       WidthRequest="9"
                       HeightRequest="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,0,15,0"
                       />
                <Button Margin="10,0,10,0" 
                        BackgroundColor="#00000000"
                        CornerRadius="5" Grid.ColumnSpan="7"
                        Clicked="DogovorAdv_Clicked"/>
            </Grid>

            <Grid Grid.Row="4" Margin="10, 0, 10, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame BackgroundColor="#FFFFFF"  Grid.ColumnSpan="7" Margin="10,0,10,5" HasShadow="True" CornerRadius="5">

                    <Label Text="Банковские реквизиты" Grid.ColumnSpan="6"
                       TextColor="Black" FontSize="Subtitle"  VerticalTextAlignment="Center" 
                        Margin="10,0,10,0" />
                </Frame>

                <Image Source="shape.png"
                       Grid.Column="6"
                       Aspect="AspectFill"
                       WidthRequest="9"
                       HeightRequest="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,0,15,0"
                       />
                <Button Margin="10,0,10,0"
                        x:Name="DataOrganizationBankAdv"
                        BackgroundColor="#00000000"
                        CornerRadius="5" Grid.ColumnSpan="7"
                        Clicked="DataOrganizationBankAdv_Clicked"/>
            </Grid>

            <Grid Grid.Row="5" Margin="10, 0, 10, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Показать на карте только автомобили, учавствующие в рекламных компаниях"
                        HorizontalOptions="Start" Grid.ColumnSpan="4" TextColor="#6F6F6F" FontSize="12"
                         Margin="10,0,10,0"/>

                <Switch IsToggled="True" 
                        Grid.Column="6"
                        HorizontalOptions="Start"
                        VerticalOptions="Start" Margin="0,0,0,0"/>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0,7"/>
                    <ColumnDefinition Width="0,3"/>
                </Grid.ColumnDefinitions>
            </Grid>


        </Grid>

    </ContentPage.Content>
</ContentPage>