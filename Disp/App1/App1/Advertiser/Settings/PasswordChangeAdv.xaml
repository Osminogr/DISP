<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Advertiser.Settings.PasswordChangeAdv"
             Title="Настройки">
    <ContentPage.Content>
        <StackLayout Padding="24,50,24,0">
            
            <Entry Placeholder="Старый пароль"
                   FontSize="16"/>

            <Entry Placeholder="Новый пароль"
                   FontSize="16"/>
            <Entry Placeholder="Повторите новый пароль"
                   FontSize="16"/>

            <Button Text="Получить ссылку"
                    Clicked="GetLinkEmailUser_Clicked"
                    x:Name="GetLinkEmailUser"
                    TextColor="#FFFFFF"
                    Margin="70,20,70,0"
                    BackgroundColor="#FFB800"
                    CornerRadius="40"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>