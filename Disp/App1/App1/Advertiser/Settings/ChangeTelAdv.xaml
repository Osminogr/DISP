<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Advertiser.Settings.ChangeTelAdv"
             xmlns:templates="clr-namespace:App1.Templates">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Padding="24,50,24,0" Grid.Row="0">
                <Label Text="Номер телефона"
                   FontFamily="RobotoBold"/>
                <Entry Placeholder="+7(000) 000-00-00"
                   FontSize="16" x:Name="currentPhone"
                   Keyboard="Telephone"/>

                <Label Text="Новый номер телефона"
                   FontFamily="RobotoBold"/>
                <Entry Placeholder="+7(999) 999-99-99"
                   FontSize="16" x:Name="newPhone"
                   Keyboard="Telephone"/>

                <Button Text="Готово"
                    TextColor="#FFFFFF"
                    Margin="70,20,70,0" Clicked="SavePhone"
                    BackgroundColor="#FFB800"
                    CornerRadius="40"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>