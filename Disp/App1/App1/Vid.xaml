<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vv="clr-namespace:Octane.Xamarin.Forms.VideoPlayer;assembly=Octane.Xamarin.Forms.VideoPlayer"
             x:Name="this"
             x:Class="App1.Vid">
    <Grid BindingContext="{x:Reference this}">
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Frame BackgroundColor="#FFB800"
                       CornerRadius="12" Grid.Column="0" Grid.Row="0" Margin="5,0,0,-20 ">

            <Label 
                Text="{Binding Name}"
                               FontSize="Small"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="StartAndExpand"
                               Margin="0,-12,0,0"/>

        </Frame>

        <vv:VideoPlayer Source="{Binding Url}"
                       DisplayControls="True"
                       AutoPlay="False"
                       VerticalOptions="FillAndExpand"
                       Grid.ColumnSpan="2"
                       Grid.Row="1"
                       HeightRequest="200"
                       Margin="5,0,5,10"/>
    </Grid>
</ContentView>