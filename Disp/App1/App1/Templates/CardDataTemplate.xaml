<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.Templates.CardDataTemplate">
    <StackLayout>
        <Frame Margin="0,0,0,0" HasShadow="True" MinimumHeightRequest="50" MinimumWidthRequest="50" BorderColor="#CCCCCC" IsVisible="True" x:Name="cardDataFrame">
            <Grid>
                <Image Source="mastercard_icon.png" Grid.Row="0" HorizontalOptions="Start" Grid.Column="0"></Image>
                <Label Text="" x:Name="PAN" FontSize="16" VerticalTextAlignment="Center" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4"/>
                <Label Text="11/21" IsVisible="false" Grid.Row="0" TextColor="#CCCCCC" Grid.Column="4" VerticalOptions="Center"></Label>
                <Label Text="CVV" IsVisible="false" x:Name="CVVLabel" Opacity="0" Grid.Row="0" TextColor="#CCCCCC" Grid.Column="5" VerticalOptions="Center"></Label>
                <local:CustomEntry x:Name="CVV" Grid.Row="0" Grid.Column="6" Margin="-10, 0, 10, 0" Opacity="0" MaxLength="3" Keyboard="Numeric"></local:CustomEntry>
                <RadioButton Grid.Column="7" Grid.Row="0" x:Name="cardChecked"/>
            </Grid>
        </Frame>
    </StackLayout>
</ContentView>