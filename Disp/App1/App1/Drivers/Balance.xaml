                        Grid.Column="1"
                        Grid.Row="1"
                        Margin="0,7,20,0"/>

            </Grid>
        
        <Grid Margin="30,15,30,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1"/>
                </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            

            
            <Label Text="Video201231" HorizontalOptions="Start" 
                   Grid.Row="0"  Grid.Column="0" />
            <Label Text="ООО 'Компания'" HorizontalOptions="Center" 
                   Grid.Row="0" Grid.Column="1"/>
            <Label Text="13₽" HorizontalOptions="End" 
                   Grid.Row="0" Grid.Column="2" />


            <Label Text="Video201232" HorizontalOptions="Start" 
                   Grid.Row="1"  Grid.Column="0" />
            <Label Text="ООО 'Компания'" HorizontalOptions="Center" 
                   Grid.Row="1" Grid.Column="1"/>
            <Label Text="15₽" HorizontalOptions="End" 
                   Grid.Row="1" Grid.Column="2"/>
            
            <Label Text="Video201233" HorizontalOptions="Start" 
                   Grid.Row="2"  Grid.Column="0" />
            <Label Text="ООО 'Компания'" HorizontalOptions="Center" 
                   Grid.Row="2" Grid.Column="1"/>
