                   Grid.Row="2" Grid.Column="2"/>

            <Label Text="Итого: 38₽" HorizontalOptions="End" 
                   Grid.Row="3" Grid.Column="2" />

            <Label Text="История перечислений" 
                   HorizontalOptions="Start" VerticalOptions="Start" 
                   TextColor="#FFB800" FontAttributes="Bold" 
                   Grid.Row="4" Grid.ColumnSpan="3" FontSize="20" />

            <Label Text="Перевод денежных средств на банковскую карту" HorizontalOptions="Start"
                   Grid.Row="5" Grid.ColumnSpan="2" Grid.Column="0"/>

            <Label Text="03.01.2021" HorizontalOptions="Start"
                   Grid.Row="6" Grid.Column="0"/>
            <Label Text="1000₽" HorizontalOptions="End"
                   Grid.Row="6" Grid.Column="2" />
            <BoxView BackgroundColor="#F39F26" Grid.ColumnSpan="3" Grid.Row="7" />

            <Label Text="Перевод денежных средств на банковскую карту" HorizontalOptions="Start"
               Grid.Row="8" Grid.ColumnSpan="2" Grid.Column="0"/>
            <Label Text="03.01.2021" HorizontalOptions="Start"
               Grid.Row="9" Grid.Column="0"/>
            <Label Text="850₽" HorizontalOptions="End"
               Grid.Row="9" Grid.Column="2" />
            <BoxView BackgroundColor="#F39F26" Grid.ColumnSpan="3" Grid.Row="10" />

            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>